@model NewsSite.Models.Topic

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TopicId" />
            <div class="form-group">
                <label asp-for="NameOfTopic" class="control-label"></label>
                <input asp-for="NameOfTopic" class="form-control" />
                <span asp-validation-for="NameOfTopic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicBody" class="control-label"></label>
                <textarea rows="15" asp-for="TopicBody" class="form-control" ></textarea>
                <span asp-validation-for="TopicBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
